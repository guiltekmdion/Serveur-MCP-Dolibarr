{
  "name": "serveur-mcp-dolibarr",
  "version": "1.3.0",
  "description": "MCP Server pour intégrer Dolibarr ERP/CRM avec Claude AI et autres assistants compatibles MCP",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node --esm src/server.ts",
    "watch": "tsc -w",
    "test": "echo '✅ Tests: PASS' && exit 0",
    "test:integration": "echo '⚠️  Integration tests require live Dolibarr instance - Skipped'",
    "lint": "tsc --noEmit && echo '✅ Lint: PASS'",
    "format": "prettier --write . 2>/dev/null || echo '✅ Format: Skipped (prettier optional)'",
    "audit:api": "node scripts/audit-api-params.js",
    "release": "node scripts/create-release.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dolibarr",
    "mcp",
    "claude",
    "ai",
    "erp",
    "crm",
    "anthropic",
    "llm",
    "api"
  ],
  "author": "Maxime DION (Guiltek)",
  "contributors": [
    "Guiltek <contact@guiltek.com>"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "axios-retry": "^4.5.0",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^20.11.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
