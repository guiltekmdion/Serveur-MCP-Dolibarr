{
  "name": "serveur-mcp-dolibarr",
  "version": "1.4.1",
  "description": "MCP Server pour intégrer Dolibarr ERP/CRM avec Claude AI et autres assistants compatibles MCP",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node --esm src/server.ts",
    "watch": "tsc -w",
    "test": "node --experimental-vm-modules --loader ts-node/esm --test tests/dolibarr.test.ts",
    "test:integration": "node tests/run-integration.js",
    "test:all": "npm run test && npm run test:integration",
    "lint": "tsc --noEmit && echo '✅ Lint: PASS'",
    "format": "prettier --write . 2>/dev/null || echo '✅ Format: Skipped (prettier optional)'",
    "audit:api": "node scripts/audit-api-params.js",
    "release": "node scripts/create-release.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "dolibarr",
    "mcp",
    "claude",
    "ai",
    "erp",
    "crm",
    "anthropic",
    "llm",
    "api"
  ],
  "author": "Maxime DION (Guiltek)",
  "contributors": [
    "Guiltek <contact@guiltek.com>"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "axios": "^1.9.0",
    "axios-retry": "^4.5.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^22.15.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.28.0",
    "prettier": "^3.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.0"
  },
  "overrides": {
    "cross-spawn": ">=7.0.5",
    "glob": ">=11.1.0",
    "body-parser": ">=2.2.1",
    "brace-expansion": ">=2.0.2"
  }
}
